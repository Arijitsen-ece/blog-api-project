<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Blog</title>
  <link rel="stylesheet" href="/styles/main.css">
</head>

<body>
  <div class="container">
    <h1>My Blog</h1>
    <a id="newPostBtn" href="/new">New Post</a>

    <ul>
      <% posts.forEach(post => { %>
        <li>
          <h2><%= post.title %></h2>
          <small><%= post.date %></small>
          <p><%= post.content %></p>
          <small>By: <%= post.author %></small><br>
          <a class="edit" href="/edit/<%= post.id %>">Edit</a>
          <a class="delete" href="/posts/delete/<%= post.id %>">Delete</a>
        </li>
      <% }); %>
    </ul>
  </div>
</body>

</html>
